{
  "name": "@crosshatch/galatea",
  "version": "0.0.0",
  "exports": "./mod.ts",
  "lock": false,
  "tasks": {
    "mod": "deno run -A https://deno.land/x/moderate@0.0.5/mod.ts && dprint fmt",
    "www": "deno run -A npm:vite"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@^1.0.6",
    "@std/cache": "jsr:@std/cache@^0.1.3",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/encoding": "jsr:@std/encoding@^1.0.5",
    "@std/http": "jsr:@std/http@1",
    "@types/json-schema": "npm:@types/json-schema@^7.0.15",
    "@types/react": "npm:@types/react@^18.3.11",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.2",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "vite": "npm:vite@^5.4.8"
  },
  "lint": {
    "rules": {
      "include": ["ban-untagged-todo", "guard-for-in"],
      "exclude": [
        "ban-types",
        "ban-untagged-todo",
        "no-empty",
        "no-explicit-any",
        "no-inner-declarations",
        "no-namespace"
      ]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  }
}
